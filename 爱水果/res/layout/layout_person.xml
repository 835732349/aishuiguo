<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="2"
        android:background="@color/bgColor" >

        <com.aishuiguo.view.CircleImageView
            android:id="@+id/iv_user_image"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/widget_dface"
            app:civ_border_color="#FFFFFF" />

        <TextView
            android:id="@+id/tx_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_user_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/no_login"
            android:textColor="@color/myColor" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/person_bg"
        android:orientation="vertical" >

        <TextView
            style="@style/person_textView_style"
            android:text="@string/my_messages" />

        <TextView
            style="@style/person_textView_style"
            android:text="@string/my_messages" />

        <TextView
            style="@style/person_textView_style"
            android:text="@string/my_messages" />

        <TextView
            style="@style/person_textView_style"
            android:text="@string/my_messages" />

        <TextView
            style="@style/person_textView_style"
            android:text="@string/my_messages" />
    </LinearLayout>

</LinearLayout>