<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/home_category_style"
            android:background="@drawable/home_category_blue_selector"
            android:text="浆果类" />

        <TextView
            style="@style/home_category_style"
            android:layout_marginRight="5dp"
            android:background="@drawable/home_category_orange_selector"
            android:text="柑橘类" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/home_category_style"
            android:background="@drawable/home_category_darkcyan_selector"
            android:text="仁果类" />

        <TextView
            style="@style/home_category_style"
            android:layout_marginRight="5dp"
            android:background="@drawable/home_category_green_selector"
            android:text="瓜类" />
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divider_color" />

</LinearLayout>